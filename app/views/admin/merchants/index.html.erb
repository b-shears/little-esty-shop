<h1>Admin Merchant Index</h1>

  <h3>Enable Merchants</h3>

    <% @enabled_merchants.each do |merchant| %>
      <div class="enabled_merchant-<%=merchant.id%>">
          <p> Merchant Name: <%= link_to merchant.name, "admin/merchants/#{merchant.id}"%>
          <%= button_to "Disable", "/admin/merchants/#{merchant.id}", method: :patch, params: {status: 'disabled', merchant_id: merchant.id} %></p>
      </div>
    <% end %>

    <h3>Disabled Merchants</h3>
    <% @disabled_merchants.each do |merchant| %>
      <div class="disabled_merchant-<%=merchant.id%>">
          <p> Merchant Name: <%= link_to merchant.name, "admin/merchants/#{merchant.id}"%>
            <%= button_to "Enable", "/admin/merchants/#{merchant.id}", method: :patch, params: {status: 'enabled', merchant_id: merchant.id} %></p>
      </div>
    <% end %>
